<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment Method</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Insert</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Form Edit Payment</h3>
                    </div>
                    <form action="/payment/edit/<%= payment._id %>?_method=put" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="type">Payment Type</label>
                                <input type="text" value="<%= payment.type %>" name="type" class="form-control" id="type" placeholder="Insert Payment Type" required>
                            </div>
                            <div class="form-group">
                              <label>Banks</label>
                              <div class="select2-purple">
                                <select class="form-control select2" multiple="multiple" data-placeholder="Choose Nominal" style="width: 100%;" name="banks" required>
                                  <% bank.forEach(bank => { %>
                                      <option value="<%= bank._id %>"
                                        <% payment.banks.forEach(paymentBank => { %>
                                          <% if(bank._id.toString() === paymentBank._id.toString()) { %>
                                            selected
                                          <% } %>
                                        <% }) %>
                                        >
                                        <%= bank.name %> ~ <%= bank.nameBank %>
                                      </option>
                                  <% }) %>
                                </select>
                              </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>