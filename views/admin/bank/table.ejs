<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No.</th>
      <th>Owner</th>
      <th>Bank Name</th>
      <th>Account Number</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < bank.length; i++) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= bank[i].name %></td>
          <td><%= bank[i].nameBank %></td>
          <td><%= bank[i].accountNumber %></td>
          <td>
            <form action="/bank/delete/<%= bank[i]._id %>?_method=delete" method="post">
              <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-warning">
                <i class="nav-icon fas fa-pencil-alt"></i>
              </a>
              <button class="btn btn-danger"><i class="nav-icon fas fa-trash-alt"></i></button>
            </form>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>