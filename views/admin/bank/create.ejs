<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Insert</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-body">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Form Add Bank</h3>
                    </div>
                    <form action="/bank/create" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Insert Bank Owner</label>
                                <input type="text" name="name" class="form-control" id="name" placeholder="Insert Bank Owner" required>
                            </div>
                            <div class="form-group">
                                <label for="nameBank">Insert Bank Name</label>
                                <input type="text" name="nameBank" class="form-control" id="nameBank" placeholder="Insert Bank Name" required>
                            </div>
                            <div class="form-group">
                                <label for="accountNumber">Insert Account Number</label>
                                <input type="text" name="accountNumber" class="form-control" id="accountNumber" placeholder="Insert Account Number" required>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
</div>

